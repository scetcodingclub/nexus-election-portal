
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Candidate Images: Publicly readable, admin-writable
    match /candidate-images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // Placeholder: Should be specific admin check (e.g., custom claims)
    }
  }
}
