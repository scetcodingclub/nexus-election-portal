
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin authentication
    function isAdmin() {
      return request.auth != null;
    }

    // Rules for the electionRooms collection
    match /electionRooms/{roomId} {
      // Admins can do anything
      allow read, write, delete: if isAdmin();

      // Non-admins (public participants) can read the room data
      allow get: if !isAdmin();

      // Rules for the 'voters' subcollection
      match /voters/{voterId} {
        // Admins can do anything
        allow read, write: if isAdmin();
        
        // Non-admins can get, create, and update their own voter document
        // This is crucial for tracking "in_room" and "completed" status
        allow get, create, update: if !isAdmin();
      }

      // Rules for the 'votes' subcollection
      match /votes/{voteId} {
        // Admins can read votes
        allow read: if isAdmin();
        
        // Non-admins can create votes (i.e., submit a ballot)
        allow create: if !isAdmin();
      }

      // Rules for the 'reviews' subcollection
      match /reviews/{reviewId} {
        // Admins can read reviews
        allow read: if isAdmin();
        
        // Non-admins can create reviews
        allow create: if !isAdmin();
      }
    }
  }
}
