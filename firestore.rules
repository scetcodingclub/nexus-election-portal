
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Election rooms are public to read, but only authenticated users (admins) can write.
    match /electionRooms/{roomId} {
      allow read;
      allow create, update, delete: if request.auth != null;
    }

    // Voters subcollection:
    // Anyone can create their own vote record (prevents double voting).
    // Only authenticated users (admins) can read the list of who has voted.
    match /electionRooms/{roomId}/voters/{userEmail} {
      allow read, delete: if request.auth != null;
      allow create: if true;
    }
  }
}
