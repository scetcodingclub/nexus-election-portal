
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /electionRooms/{roomId} {
      // Public can read room details, but only admins can change them.
      allow read: if true;
      allow create, update, delete: if request.auth != null;

      // Anyone can create a record of their vote to prevent double-voting.
      // This is the key to preventing a user from voting multiple times.
      match /voters/{voterId} {
        allow read, create: if true;
        // Only admins can modify/delete these records.
        allow update, delete: if request.auth != null;
      }
      
      // Anyone can cast a vote by creating a new vote document.
      // These should be immutable once created to ensure vote integrity.
      match /votes/{voteId} {
        // Only admins can see individual votes to protect voter privacy.
        allow read: if request.auth != null;
        // Anyone can create a vote document.
        allow create: if true; 
        // No one can change or delete a vote once it has been cast.
        allow update, delete: if false;
      }
    }

    // By default, deny access to all other collections and documents.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
